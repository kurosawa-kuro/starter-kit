# テスト用環境変数
NODE_ENV=test
PORT=8081
HOST=localhost

# テスト用SQLiteデータベース設定
DB_PATH=./data/test-database.sqlite
DB_MODE=sqlite

# テスト用ログ設定
LOG_LEVEL=error
LOG_FORMAT=json

# テスト用CORS設定
CORS_ORIGIN=*
CORS_CREDENTIALS=false
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# テスト用レート制限設定
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_MESSAGE=Too many requests from this IP

# テスト用セキュリティ設定
HELMET_ENABLED=false
TRUST_PROXY=false
REQUEST_SIZE_LIMIT=10mb

# テスト用API設定
API_PREFIX=/api
API_VERSION=v1

# テスト用ヘルスチェック設定
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT=5000

# テスト用開発設定
MOCK_MODE=false
DEBUG_MODE=false
